<div class ="banner">
  <p>Your one stop shop to see every comedian preforming in New York City!</p>
</div>

<% t=Time.new %>
  <h2 class="center" style="color:#F24C3D;"><%= t.strftime("%A, %B %e") %>
  </h2>

  <% @clubs.each do |club| %>
    <section class="tile">
  <!-- # <%  club.shows.future.present? %> -->
      <h1 class="club"><%= link_to club.name, club.website %> </h1>
     <!--  <p class="address"><%= club.location %></p> -->

  <% club.shows.future.order("start_time").each do |show| %>
    <h3 class="center"><%= show.pretty_start_time %></h3>
      <% show.comedians.each do |comedian| %>

    <div>
        <ol>
          <li>
            <h4 class="comedian"><%= link_to comedian.name,comedian_path(comedian) %></h4>
            <p class="bio"><%= comedian.bio %></p>
          </li>
        </ol>
    </div>

<% end %>
    <%= link_to '<button type="button" class="ticket">Make a Reservation</button>'.html_safe, club.website %>
  <hr />
    <% end %>
    </section>
    <% end %>




