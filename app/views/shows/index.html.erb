<h1>Listing shows</h1>
   <% @shows.each do |show| %>
    <h2> <%= show.comedy_club.name  %></h2>
     <h4><%= simple_format(show.title) %></h4>
      <%= simple_format(show.pretty_start_time) %>
      <% show.comedians.each do |comedian| %>
     <%= simple_format(comedian.name) %>
  <% end %>
        <%= link_to 'Show', show %>
        <%= link_to 'Edit', edit_show_path(show) %>
        <%= link_to 'Destroy', show, method: :delete, data: { confirm: 'Are you sure' } %>
    <% end %>

<%= link_to 'New Show', new_show_path %>
